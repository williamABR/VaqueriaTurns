<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cierre de Turno</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <h1>Gestión de Turnos - Vaqueria Express</h1>
    </header>
    <main style="margin: 16px;">
        <h2>Inicio de Turno</h2>
        <form action="/iniciar-turno" method="POST">
            <label for="cajero">Nombre del Cajero:</label>
            <input type="text" id="cajero" name="cajero" required><br><br>

            <label for="efectivo_disponible">Efectivo Disponible:</label>
            <input type="number" id="efectivo_disponible" name="efectivo_disponible" step="0.01" required><br><br>

            <label for="venta_total">Venta Total:</label>
            <input type="number" id="venta_total" name="venta_total" step="0.01" required><br><br>

            <h3>Gastos</h3>
            <div id="gastos">
                <div class="gasto-item">
                    <label for="categoria">Categoría:</label>
                    <select name="categoria[]" required>
                        <option value="Pago Salario">Pago Salario</option>
                        <option value="Gastos Negocio">Gastos Negocio</option>
                    </select>

                    <label for="monto">Monto:</label>
                    <input type="number" name="monto[]" step="0.01" required>

                    <label for="descripcion">Descripción:</label>
                    <input type="text" name="descripcion[]" required><br><br>
                </div>
            </div>

            <button type="button" id="add-gasto">Añadir Otro Gasto</button><br><br>

            <h3>Ventas</h3>
            <label for="total_tarjetas">Total Ventas Tarjetas:</label>
            <input type="number" id="total_tarjetas" name="total_tarjetas" step="0.01" required><br><br>

            <label for="total_nequi_daviplata">Total Ventas Nequi/Daviplata:</label>
            <input type="number" id="total_nequi_daviplata" name="total_nequi_daviplata" step="0.01" required><br><br>

            <button type="submit">Cerrar Turno</button>
        </form>
    </main>
    <script>
        document.getElementById('add-gasto').addEventListener('click', function() {
            const gastosDiv = document.getElementById('gastos');
            const nuevoGasto = document.createElement('div');
            nuevoGasto.className = 'gasto-item';
            nuevoGasto.innerHTML = `
                <label for="categoria">Categoría:</label>
                <select name="categoria[]" required>
                    <option value="Pago Salario">Pago Salario</option>
                    <option value="Gastos Negocio">Gastos Negocio</option>
                </select>

                <label for="monto">Monto:</label>
                <input type="number" name="monto[]" step="0.01" required>

                <label for="descripcion">Descripción:</label>
                <input type="text" name="descripcion[]" required><br><br>
            `;
            gastosDiv.appendChild(nuevoGasto);
        });
    </script>
</body>
</html>
